<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="225dp"
        android:layout_height="100dp"
        android:contentDescription="@string/texto_pruebas"
        tools:background="#FFCCBC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMarca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Marca"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCar" />

    <TextView
        android:id="@+id/tvModelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Modelo"
        app:layout_constraintTop_toBottomOf="@id/tvMarca"
        app:layout_constraintStart_toEndOf="@id/ivCar"/>

    <TextView
        android:id="@+id/tvFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Combustible"
        app:layout_constraintTop_toBottomOf="@id/tvModelo"
        app:layout_constraintStart_toEndOf="@id/ivCar"/>

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Color"
        app:layout_constraintTop_toBottomOf="@id/tvFuel"
        app:layout_constraintStart_toEndOf="@id/ivCar"/>

</androidx.constraintlayout.widget.ConstraintLayout>